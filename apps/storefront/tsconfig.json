{
  "extends": "tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@mono/components": ["src/components/index.ts"],
      "@mono/views/*": ["src/views/*"],
      "@mono/pages/*": ["src/pages/*"]
    }
  }
}
